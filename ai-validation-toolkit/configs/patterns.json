{
  "phantom-apis": [
    "validateToken",
    "sendNotification",
    "authenticateUser",
    "processPayment",
    "sendEmail",
    "validateEmail",
    "hashPassword",
    "verifyPassword"
  ],
  "security-patterns": {
    "sql-injection": [
      "\\$\\{.*\\}",
      "\\+.*req\\.(params|query|body)",
      "`SELECT.*\\$\\{",
      "`INSERT.*\\$\\{",
      "`UPDATE.*\\$\\{",
      "`DELETE.*\\$\\{"
    ],
    "xss": [
      "innerHTML\\s*=\\s*.*req\\.",
      "dangerouslySetInnerHTML",
      "<div>.*\\{.*req\\.",
      "document\\.write\\(.*req\\."
    ],
    "hardcoded-secrets": [
      "['\"]sk_live_[a-zA-Z0-9]{20,}['\"]",
      "['\"]sk_test_[a-zA-Z0-9]{20,}['\"]",
      "['\"]AIza[0-9A-Za-z_-]{35}['\"]",
      "password\\s*[:=]\\s*['\"][^'\"]+['\"]",
      "api[_-]?key\\s*[:=]\\s*['\"][^'\"]+['\"]"
    ]
  },
  "performance-patterns": {
    "nested-loops": {
      "max-depth": 2,
      "message": "Deeply nested loops detected"
    },
    "synchronous-operations": [
      "fs\\.readFileSync",
      "fs\\.writeFileSync",
      "fs\\.readdirSync"
    ],
    "inefficient-queries": [
      "\\.find\\(.*\\.find\\(",
      "\\.filter\\(.*\\.filter\\("
    ]
  }
}

